/* Auxiliary function used to deal with the following bitwise operators: &, ^, and | */
function applyBitwiseOperator(operator, lnum, rnum) {
  if (operator = "&=") {
    return lnum & rnum
  };
  if (operator = "^=") {
    return lnum ^ rnum
  };
  if (operator = "|=") {
    return lnum | rnum
  };

  assert false
}
